
 <div class="row">
  <div class="col-md-6">
    <h1>Sign in</h1>


  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control form-control-lg", :autofocus => true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group col-md-8">
      <div class="form-group checkbox small">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Sign in", class: "btn btn-default btn-block btn-lg btn-inverse" %>
    </div>
  <% end %>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
  <!-- /.col-*-6 -->
<!-- /.row -->

